	<h1>Filmide ja tegelaste haldamine</h1>

    <form id="personForm" method="POST" action="/submit">
        <h2>Lisa filmitegelane</h2>
        <label for="personName">Tegelase nimi:</label>
        <input type="text" id="personName" name="personName" required>
        <button type="submit" name="personSubmit">Lisa tegelane</button>
    </form>

    <form id="filmForm" method="POST" action="/submit">
        <h2>Lisa film</h2>
        <label for="filmTitle">Filmi pealkiri:</label>
        <input type="text" id="filmTitle" name="filmTitle" required>
        <label for="filmYear">Aasta:</label>
        <input type="number" id="filmYear" name="filmYear" required>
        <button type="submit" name="filmSubmit">Lisa film</button>
    </form>

    <form id="roleForm" method="POST" action="/submit">
        <h2>Lisa tegelase roll filmis</h2>
        <label for="rolePerson">Tegelase nimi:</label>
        <input type="text" id="rolePerson" name="rolePerson" required>
        <label for="roleFilm">Filmi pealkiri:</label>
        <input type="text" id="roleFilm" name="roleFilm" required>
        <label for="roleType">Roll (näitleja, režissöör vms):</label>
        <input type="text" id="roleType" name="roleType" required>
        <button type="submit" name="roleSubmit">Lisa roll</button>
    </form>
